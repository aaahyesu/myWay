generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String  @unique
  posts Post[]
  place Place[]
}

model Place {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  address   String
  photo     String
  open      String
  close     String
  tel       String
  sns       String

  user      User     @relation(fields: [username], references: [name], onDelete: Cascade)
  username  String
}
model banner {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  photo     String
}


model Post {
  id             Int           @id @default(autoincrement())
  title          String        
  theme          String
  content        String       
  photo          String
  coordinate     Coordinate[]
  author         User         @relation(fields: [authorname], references: [name], onDelete: Cascade)
  authorname     String
}

model Coordinate {
  id        Int     @id @default(autoincrement())
  address   String
  latitude  String
  longitude String
  key       BigInt  @unique
  name      String?
  postId    Int?
  post      Post?    @relation(fields: [postId], references: [id])
}

