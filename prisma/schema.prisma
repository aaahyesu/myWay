generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String  
  posts Post[]
  place Place[]
}

model Place {
  id        Int     @id @default(autoincrement())
  title     String
  category  String
  content   String
  address   String
  photo     String
  open      String
  close     String
  tel       String
  sns       String

  user      User     @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail  String
}
model banner {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  photo     String
}


model Post {
  id             Int           @id @default(autoincrement())
  title          String        
  theme          String
  content        String       
  photo          String
  coordinate     Coordinate[]
  author         User         @relation(fields: [authorEmail], references: [email], onDelete: Cascade)
  authorEmail    String
}

model Coordinate {
  id        Int     @id @default(autoincrement())
  address   String
  latitude  String
  longitude String
  key       BigInt  @unique
  name      String?
  postId    Int?
  post      Post?    @relation(fields: [postId], references: [id])
}


